<resources>

    <!-- Base application theme. -->
    <style name="AppMaterialBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- 自定义Drawer返回箭头的颜色
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        -->

        <!-- 各控制元件(如：check box、switch 或是 radoi) 被勾选 (checked) 或是选定 (selected) 的颜色。-->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 各控制元件(如：check box、switch 或是 radoi) 默认的颜色 的颜色。
        <item name="colorControlNormal"></item>
        -->
    </style>

    <!-- Activity默认主题-->
    <style name="AppMaterialBaseTheme.Default" parent="AppMaterialBaseTheme">

    </style>

    <!-- Activity不能滑动返回时设置的主题-->
    <style name="AppMaterialBaseTheme.NoTransLucent" parent="AppMaterialBaseTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppMaterialBaseTheme.Launcher" parent="AppMaterialBaseTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowFullscreen">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MaterialBaseTheme.Light.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="MaterialBaseTheme.Light.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!-- drawer 返回箭头的颜色-->
    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/color_white</item>
    </style>

    <style name="AppMaterialBaseTheme.Default.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppMaterialBaseTheme.Default.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- 黑色二号字体 -->
    <style name="text_second_style">
        <item name="android:textSize">@dimen/htext</item>
        <item name="android:textColor">@color/common_font_color</item>
    </style>


    <style name="FragmentTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="FullscreenTheme" parent="AppMaterialBaseTheme.Default">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>

